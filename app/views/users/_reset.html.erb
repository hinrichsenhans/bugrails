<div class="jumbotron">
    <h3>Password Reset</h3>
    <%= form_for :user, :url => "/reset", :html => {:class => "form-horizontal"} do |f| %>
        <div class="form-group">
            <%= f.label :username, "Username (Email)", class: "control-label col-sm-2" %>
            <div class="col-sm-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
            </div>
        </div>
        <div class="form-group"> 
            <div class="col-sm-offset-2 col-sm-10">
                <%= f.submit "Request password reset", class: "btn btn-default btn-lg" %>
            </div>
        </div>
    <% end %>
</div>