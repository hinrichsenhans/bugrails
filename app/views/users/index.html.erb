<div class="page-header">
  <h1>Administer Users</h1>
</div>
<div class="collapse">
  <%= link_to "Add a new product", new_product_path %>
</div>
<div class="col-md-12">
  <ul class="list-group">
    <% @users.each do |u| %>
      <li class="list-group-item">
        <h4 class="list-group-item-heading">
          <%=u.name%>
        </h4>
        <div class="">
          <p><%= u.email %></p>
        </div>
          <%= link_to "Rename", 
                      "#", #temp
                      #edit_user_path(u), 
                      :class=>"btn btn-sm" %>
          <%= link_to "Remove",  
                      "#", #temp
                      # user_path(u), 
                      # :method => :delete, 
                      :class=>"btn btn-sm" %>
            <%= link_to "Reset Password",  
                        "#", 
                        :class=>"btn btn-sm" %>
        <p class="list-group-item-text">
          <%= u.submitted_bugs.count %> Bugs Submitted | 
          <%= u.developer_assigned_bugs.count %> Bugs Assigned
        </p>
      </li>
    <% end %>
  </ul>
</div>