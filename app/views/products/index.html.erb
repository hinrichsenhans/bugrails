<h1>Products</h1>
<a href="#">Add a new product</a>
<div class="col-md-12">
  <ul class="list-group">
    <% @products.each do |p| %>
      <li class="list-group-item">
        <h4 class="list-group-item-heading">
          <%=p.name%>
        </h4>
        <div class="">
          <p><%= p.description %></ppp>
        </div>
          <%= link_to "View Bugs", '#' %> 
          <%= link_to "Rename",  edit_product_path(p) %>
          <%= link_to "Remove",  
            product_path(p), :method => :delete %>
        <p class="list-group-item-text">
          <%= link_to products_path do %>
            <%=p.components.count%> Components
          <% end %>
          |
          <%= link_to products_path do %>
            <%=p.versions.count%> Versions
          <% end %>
          |
          <%= link_to products_path do %>
            <%=p.milestones.count%> Milestones
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
</div>