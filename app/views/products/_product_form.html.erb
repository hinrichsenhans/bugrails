<%= form_for(@product) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>

  <% if type == 'new' %>
    <%= f.submit "Add Product", class: 'btn btn-primary' %>
  <% elsif type =='edit' %>
    <%= f.submit "Update Product", class: 'btn btn-primary' %>
  <% end %>
<% end %>